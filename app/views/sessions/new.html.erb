<h2>Sign In</h2>

<div class="row">
  <div class="col-md-8">
    <%= bootstrap_form_for :session, url: sessions_path do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
      <%= f.password_field :password, placeholder: "Enter password" %>
      <%= f.check_box :remember_me, class: "remember-checkbox" %>
      <%= f.submit "Sign In", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>      
